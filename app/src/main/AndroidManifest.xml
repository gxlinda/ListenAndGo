<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.gearxpert.listenandgo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/menu_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity"
            android:label="@string/menu_search"/>
        <activity android:name=".FavouritesActivity"
            android:label="@string/menu_favourites"/>
        <activity android:name=".ChatActivity"
            android:label="@string/menu_chat"/>
        <activity android:name=".PlayingActivity"
            android:label="@string/listenAndGo"/>
        <activity android:name=".ShoppingActivity"
            android:label="@string/menu_shopping"/>
        <activity android:name=".CategoryPopActivity"
            android:label="@string/category_mostPopular_pop"></activity>
    </application>

</manifest>